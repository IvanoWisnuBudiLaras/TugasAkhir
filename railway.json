{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd frontend && npm install --omit=optional && npm run build",
    "startCommand": "cd frontend && npm run start",
    "env": {
      "NODE_ENV": "production",
      "NPM_CONFIG_PRODUCTION": "false"
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}