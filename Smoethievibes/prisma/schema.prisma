generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("customer")
  createdAt DateTime @default(now())
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  stock     Int      @default(0)
  createdAt DateTime @default(now())
}
